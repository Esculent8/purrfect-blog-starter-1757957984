@{
    ViewBag.Title = "Login";
}

@model purrfect_blog_starter_1757957984.Models.LoginViewModel

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <p class="lead"></p>
    </section>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h3 class="card-title mb-3 text-center">Welcome back! Please sign in.</h3>

                @* Login form posts to Account/LoginUser; includes CSRF token *@
                @using (Html.BeginForm("LoginUser", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @* Show model-level validation messages *@
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @* Username input with validation message *@
                    <div class="form-group mb-3">
                        <label for="username">Username</label>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control custom-width", placeholder = "Enter username" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>

                    @* Password input with validation message *@
                    <div class="form-group mb-3">
                        <label for="password">Password</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    @* Submit and link to registration *@
                    <button type="submit" class="btn btn-primary w-1">Sign In</button>
                    <div class="mt-2">
                        <span class="text-muted">Don't have an account?</span>
                        <a href="@Url.Action("Register", "Account")" class="register-link">Register</a>
                    </div>
                }
            </div>
        </div>
    </div>
</main>