@model purrfect_blog_starter_1757957984.Models.PostCreateViewModel
@{
    ViewBag.Title = "Edit Post";
    var postId = ViewBag.PostId as int? ?? 0;
}

<h2 class="mt-3">Edit Post</h2>
<hr />

@using (Html.BeginForm("EditPost", "Posts", new { id = postId }, FormMethod.Post, new { @class = "mt-3" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="mb-3">
        @Html.LabelFor(m => m.Title, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", maxlength = "200", placeholder = "Enter a clear, descriptive title" })
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Content, new { @class = "form-label" })
        @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = "10", placeholder = "Write your post content here..." })
        @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Category, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Category, new { @class = "form-control", maxlength = "100", placeholder = "e.g., Cats, Tips, Stories" })
        @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger" })
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a class="btn btn-secondary" href="@Url.Action("Details", "Posts", new { id = postId })">Cancel</a>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}