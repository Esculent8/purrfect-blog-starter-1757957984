@model purrfect_blog_starter_1757957984.Models.PostCreateViewModel
@{
    ViewBag.Title = "Edit Post";
    var postId = ViewBag.PostId as int? ?? 0;
}

<!-- Widen and center the page content for this view -->
<style>
    /* Make the main container full-width on this page */
    .body-content.container {
        max-width: 100% !important;
    }

    /* Center the form and make it significantly wider */
    .editpost-form-wrapper {
        width: 100%;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 16px;
        padding-right: 16px;
    }
    /* In Razor, escape CSS at-rules with @@ */
    @@media (min-width: 1400px) {
        .editpost-form-wrapper {
            max-width: 1400px;
        }
    }

    /* Ensure inputs take full width of the wrapper */
    .editpost-form .form-control {
        width: 100%;
        max-width: 100%;
    }
</style>

<h2 class="mt-3 text-center">Edit Post</h2>
<hr />

<div class="editpost-form-wrapper">
    @using (Html.BeginForm("EditPost", "Posts", new { id = postId }, FormMethod.Post, new { @class = "mt-3 editpost-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(m => m.Title, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", maxlength = "200", placeholder = "Enter a clear, descriptive title" })
            @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Content, new { @class = "form-label" })
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = "12", placeholder = "Write your post content here..." })
            @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Category, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Category, new { @class = "form-control", maxlength = "100", placeholder = "e.g., Cats, Tips, Stories" })
            @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger" })
        </div>

        <div class="d-flex gap-2 justify-content-end">
            <a class="btn btn-secondary" href="@Url.Action("Details", "Posts", new { id = postId })">Cancel</a>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    }
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}